@{
    ViewData["Title"] = "Iniciar Sesión";
}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg border-0 overflow-hidden" style="max-width: 1000px; width: 90%; border-radius: 20px;">
        <div class="row g-0">
            <!-- Sección de Imagen -->
            <div class="col-md-6 d-none d-md-block">
                <div class="h-100 w-100" style="background: url('/images/login-bg.webp') center/cover no-repeat;"></div>
            </div>

            <!-- Sección de Formularios -->
            <div class="col-md-6 p-5">
                <div class="text-center">
                    <h2 class="fw-bold" id="form-title">Iniciar Sesión</h2>
                    <p class="text-muted" id="form-subtitle">Accede a tu cuenta</p>
                </div>
            

                <!-- Formulario de Login -->
                <form id="login-form" asp-action="Login" method="post">
                    <div class="mb-4">
                        <label class="form-label fw-bold">Correo Electrónico</label>
                        <input type="email" name="email" class="form-control form-control-lg" placeholder="correo@ejemplo.com" required>
                    </div>
                    <div class="mb-4">
                        <label class="form-label fw-bold">Contraseña</label>
                        <input type="password" name="password" class="form-control form-control-lg" placeholder="********" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mt-4 fw-bold btn-lg">Ingresar</button>
                    <div class="text-center mt-4">
                        <p class="text-muted">¿No tienes cuenta? <a href="/auth/register/" class="text-primary fw-bold">Regístrate</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Agregar SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Verificamos si hay un mensaje en TempData
        var successMessage = '@TempData["SuccessMessage"]';
        var errorMessage = '@ViewBag.Error';

        if (successMessage !== undefined) {
            if (successMessage.trim() !== '') {
                Swal.fire({
                    icon: 'success',
                    title: '¡Registro exitoso!',
                    text: successMessage,
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 4000
                });
            }
        }

        if (errorMessage !== undefined) {
            if (errorMessage.trim() !== '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Error de inicio de sesión',
                    text: errorMessage,
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 4000
                });
            }
        }
        
    });
</script>